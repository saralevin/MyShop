	<% @cartsitems.each do |cartsitem| %>
		<tr class="tr_item">
			<td>
				<div class="div_item_info" >
					<%= image_tag(cartsitem.product.thumbnail, class: "img_item") %>
					<div class="item_info_div_text">
						 <p class="item_info_text"><%= cartsitem.product.description %></p> 
						<p class="item_info_id"><%= cartsitem.product.code %></p>
					</div>
				</div>
			</td>
			<td>
		
			<%= number_field_tag "", cartsitem.quantity,in: 1...10 ,:class=>'number_field_count',:data=> cartsitem.id%>
			<!-- {:onchange => remote_function(:method => :get, :url => {:action => 'alculation_price'})} -->
 
			</td>
			<td class="td_price"><%= label_tag  cartsitem.product.price %>&#8362;</td>
			<td>
			<%= link_to image_tag("x.png"),  [cartsitem.cart, cartsitem],
                    method: :delete, data: { 
                    	confirm: 'האם אתה בטוח?' } ,:remote=>true,:class=>'delete_button' %> 

                    </td>
		</tr>

<% end %>