<ul>
	<% @products.each do |product| %>
		<li class="indexLi">
			<%= link_to image_tag(product.thumbnail, :class => 'indexImage'), url_for({ :action => 'show', :id => product.id}) %>
			 <p class="indexDiscription"><%= product.description %></p>
			 <p class="indexPrice" ><%= product.price %></p>
		</li>
	<%end%>
</ul>