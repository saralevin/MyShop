<html>
<head>
	<link rel="stylesheet" type="text/css" href="products.css.scss" />

</head>


<body id="frmChooseProduct">
	<div id="DvImgProduct">
	 
	<%= image_tag(@product.thumbnail,:width => 305, :height => 460) %>

	</div>

	<label class="DscPrcSh" id="lblDescSh"> <%= @product.description %> </label>
	<label class="DscPrcSh" id="lblPrcSh"> ש"ח <%= @product.price %> </label>

	<%= form_for @new_item, url: {action: "insertItem"}, html: {class: "nifty_form"} do |f| %>

	<%= f.hidden_field :cartId, :value => session[:idCart] %>
	<%= f.hidden_field :productCode, :value =>  @product.code %>

	<div id="DvAcountSh">
	<label> Quantity:</label>
	<%= f.number_field(:quantity)   %>
	</div>
	<%= f.hidden_field :totalSum, :value =>  @product.price %>
    <%= f.submit "" ,  class: "addItem" %>
	<% end %>

	<button >How many bought from me?</button>
	
	<div id="DvAmountPr">
       bought from me: 
	</div>


</body>

</html>

<script>

$(document).ready(function(){
  $("button").click(function(){
	   $.ajax({
			url: "/products/amountProduct",
			dataType : 'json',
			data: { "code": <%= @product.code %> },
			success: function (result) {
			 	$("#DvAmountPr").text( $("#DvAmountPr").text() + result );
				$("button").hide();
			    $("#DvAmountPr").show(); 
		     }
	    });
  });
});

</script>