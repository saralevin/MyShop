<html>

<head>

<link rel="stylesheet" type="text/css" href="user.css.scss" />

</head>


<body >


<%= form_for @new_user, url: {action: "createUser"}, html: {class: "login_form"} do |f| %>
  <h1> Login </h1>
  <br/>
  <section>Enter your details:</section>
  <p>
    <%= f.text_field :firstName, :placeholder => "first name" %>
  </p>
 
  <p>
    <%= f.text_field :lastName, :placeholder => "last name" %>
  </p>
 
  <p>
    <%= email_field(:user, :email, :placeholder => "email") %>
  </p>

  <p>
    <%= f.submit "enter" , class: "btnLogin" %>
  </p>
  
<% end %>

</body>
 
</html>
  